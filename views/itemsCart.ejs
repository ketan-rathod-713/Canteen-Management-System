<!doctype html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
    integrity="sha512-PgQMlq+nqFLV4ylk1gwUOgm6CtIIXkKwaIHp/PAIWHzig/lKZSEGKEysh0TCVbHJXCLN7WetD8TFecIky75ZfQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- here css file is added -->
  <link rel="stylesheet" href="css/itemsCart.css">

  <title>Order Now</title>

</head>


<body>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-10 col-11 mx-auto">
        <div class="row mt-5 gx-3">


   <!-- left side-->
          <div class="col-md-12 col-lg-8 col-11 mx-auto main_cart mb-lg-0 mb-5 shadow">
            <div class="card p-4">
              <h2 class="py-4 font-weight-bold">Menu</h2>

              <!-- <hr /> -->

            <!-- item 1 starts-->

            <% if(items.length === 0){%>
              <div class="container">
                <h3>No Food Available</h3>
                <h4>Please Contact Canteen Authority. Sorry For Inconvenience.</h4>
                <h4>Please tell authority to update menu online.</h4>
              </div>
              <% } %>

            <% for(let i=0;i<items.length;i++){ %>
              <div class="row">
                <!-- img of item -->
                <div class="col-md-5 col-11 mx-auto bg-light d-flex justify-content-center align-items-center shadow product_img">
                  <img src="images/item.png" class="img-fluid" alt="cart img">
                </div>
                <!-- cart product details div -->
                <div class="col-md-7 col-11 mx-auto px-4 mt-2">
                  <div class="row">
                    <!-- product name div -->
                    <div class="col-6 card-title">
                      <h2 class="mb-4 product_name" id="name<%=items[i].itemId%>"><%= items[i].name%></h2>
                    </div>
                    <!-- quantity inc dec -->
                    <div class="col-6">
                      <ul class="pagination justify-content-end set_quantity">
                        <li class="page-item">
                          <button class="page-link " onclick="decrease('q<%= items[i].itemId%>')">
                            <i class="fas fa-minus"></i> </button>
                        </li>
                        <li class="page-item"><input id="q<%= items[i].itemId%>" type="number" name="" class="page-link" value="0">
                        </li>
                        <li class="page-item">
                          <button class="page-link" onclick="increase('q<%= items[i].itemId%>')"> <i class="fas fa-plus"></i></button>
                        </li>
                      </ul>
                    </div>
                  </div>

                  <div class="mb-3">
                    <h5>Menu : </h5>
                    <%= items[i].menu%>
                  </div>
                  <!-- price -->
                  <div class="row">
                    <div class="col-8 d-flex justify-content-between remove_wish">
                      <% if( items[i].available ){ %>
                      <button class="btn btn-primary" id="<%= items[i].itemId%>" onclick="addDish(this.id)">ADD ITEM</button>
                      <%} else {%>
                      <button disabled class="btn btn-danger" id="<%= items[i].itemId%>" onclick="addDish(this.id) ">ADD ITEM</button>
                      <%}%>
                    </div>
                    <div class="col-4 d-flex justify-content-end price_money">
                      <h3>₹<span id="price<%= items[i].itemId%>"><%= items[i].price%></span></h3>
                    </div>
                  </div>
                  <div class="d-flex justify-content-end">
                  <small><%= items[i].lastUpdated.toString().substring(4,21)%></small>
                  </div>
                </div>
              </div>
              <hr />
              <% } %>
            </div>
           

          </div>


   <!-- right side div -->

          <div class="col-md-12 col-lg-4 col-11 mx-auto mt-lg-0 mt-md-5">
            <div class="right_side p-3 shadow bg-white">
              <h2 class=" mb-5">The Total Amount Of</h2>
              <!-- things will append in below div-->
              <form action="/checkout" method="post">
              <div id="appendHere">

              </div>
              <!-- product amount -->
              <div class="price_indiv d-flex justify-content-between">
                <p>Product amount</p>
                <p>₹<span id="product_total_amt">0.00</span></p>
              </div>
              <hr />
              <!-- total amount -->
              <div class="total-amt d-flex justify-content-between font-weight-bold">
                <p>Total amount</p>
                <p>₹<span id="total_cart_amt">0.00</span></p>
              </div>
              <!-- ckeckout button -->
              <a href="#">
                <button value=`${arr}` class="btn btn-primary text-uppercase ">Checkout</button>
              </a>
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- script files are added from here -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
    integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
    crossorigin="anonymous"></script>


  <!-- cart02.js file is added here -->
  <script src="js/itemsCart.js"></script>

</body>

</html>